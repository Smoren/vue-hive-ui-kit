{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "es2017"],
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["webpack-env", "jest"],
    "typeRoots": ["./node_modules/@types/"],
    "paths": {
      "@hive/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
